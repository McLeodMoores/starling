<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.mcleodmoores.starling</groupId>
    <artifactId>starling-client</artifactId>
    <packaging>jar</packaging>
    <version>1.1.0-SNAPSHOT</version>
    <properties>
        <joda-beans.version>1.6</joda-beans.version>
        <joda.beans.indent>2</joda.beans.indent>
        <joda.beans.prefix>_</joda.beans.prefix>
        <!-- Properties for maven-javadoc-plugin -->
        <maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
        <maven.compiler.compilerVersion>1.7</maven.compiler.compilerVersion>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <javadoc.footer.license>Released under the Apache License, Version 2.0</javadoc.footer.license>
        <!--<build.plugins.plugin.version></build.plugins.plugin.version>-->
        <!-- testng -->
        <tests.testng.maxheap>2G</tests.testng.maxheap>
        <tests.testng.logback>com/opengamma/util/test/warn-logback.xml</tests.testng.logback>
        <tests.testng.parallel>classes</tests.testng.parallel>
        <tests.testng.threads>4</tests.testng.threads>
        <tests.testng.includedgroups>unit</tests.testng.includedgroups>
        <tests.testng.excludedgroups>integration,unitdb,unitslow</tests.testng.excludedgroups>
        <!-- checkstyle -->
        <checkstyle.config.location>checkstyle/checkstyle.xml</checkstyle.config.location>
        <checkstyle.enable.rss>false</checkstyle.enable.rss>
    </properties>
    <distributionManagement>
        <repository>
            <id>private</id>
            <name>McLeod Moores private maven repository</name>
            <url>http://maven.mcleodmoores.com:8081/content/repositories/private</url>
        </repository>
        <snapshotRepository>
            <id>private-snapshot</id>
            <name>McLeod Moores private maven snapshot repository</name>
            <url>http://maven.mcleodmoores.com:8081/content/repositories/private-snapshot</url>
        </snapshotRepository>
    </distributionManagement>
    <!--  Define some external repositories -->
    <repositories>
        <repository>
            <id>private</id>
            <name>McLeod Moores private maven repository</name>
            <url>http://maven.mcleodmoores.com:8081/content/repositories/private</url>
        </repository>
        <repository>
            <id>private-snapshot</id>
            <name>McLeod Moores private maven snapshot repository</name>
            <url>http://maven.mcleodmoores.com:8081/content/repositories/private-snapshot</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>og-public</id>
            <name>OG Public</name>
            <url>http://maven.opengamma.com/nexus/content/groups/public</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>og-public</id>
            <name>OG Public</name>
            <url>http://maven.opengamma.com/nexus/content/groups/public</url>
        </pluginRepository>
    </pluginRepositories>
    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.6</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.8.8</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.threeten</groupId>
            <artifactId>threetenbp</artifactId>
            <version>1.1</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>14.0.1</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.joda</groupId>
            <artifactId>joda-convert</artifactId>
            <version>1.7</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.joda</groupId>
            <artifactId>joda-beans</artifactId>
            <version>1.6-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.shiro</groupId>
            <artifactId>shiro-core</artifactId>
            <version>1.2.3</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>component</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>util</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>time-series</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>engine</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>core</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>financial</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>integration</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>web</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>master</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>master-db</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>live-data</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.mcleodmoores.starling.platform</groupId>
            <artifactId>financial-types</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <!-- include classpath and exclude config in jar files -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/default-ehcache.xml</exclude>
                        <exclude>**/fullstack/</exclude>
                        <!--exclude>**/marketdata/</exclude-->
                        <exclude>**/toolcontext/</exclude>
                        <exclude>**/dbtoolcontext/</exclude>
                    </excludes>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <useUniqueVersions>false</useUniqueVersions>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.joda</groupId>
                <artifactId>joda-beans-maven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>validate</goal>
                        </goals>
                        <configuration>
                            <stopOnError>false</stopOnError>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- unpack web zips -->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <includes>
                        <include>**/*Tests.java</include>
                    </includes>
                    <argLine>-Xmx${tests.testng.maxheap}</argLine>
                    <systemPropertyVariables>
                        <logback.configurationFile>${tests.testng.logback}</logback.configurationFile>
                        <test.database.type>hsqldb</test.database.type>
                    </systemPropertyVariables>
                    <parallel>${tests.testng.parallel}</parallel>
                    <threadCount>${tests.testng.threads}</threadCount>
                    <groups>${tests.testng.includedgroups}</groups>
                    <excludedGroups>${tests.testng.excludedgroups}</excludedGroups>
                    <!-- remove slow SuiteHTMLReporter -->
                    <properties>
                        <property>
                            <name>usedefaultlisteners</name>
                            <value>false</value>
                        </property>
                        <property>
                            <name>listener</name>
                            <value>org.testng.reporters.ExitCodeListener</value>
                        </property>
                        <property>
                            <name>reporter</name>
                            <value>org.testng.reporters.FailedReporter,org.testng.reporters.XMLReporter,org.testng.reporters.JUnitReportReporter</value>
                        </property>
                    </properties>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
