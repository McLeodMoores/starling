<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.masterdb.security.hibernate">
  <class name="ContractCategoryBean" table="sec_contract_category">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
        <param name="sequence_name">sec_hibernate_sequence</param> 
      </generator>
    </id>
    <property name="name" unique="true" type="string" not-null="true"/>
    <property name="description" type="string"/>
  </class>
  <query name="ContractCategoryBean.all">
    from ContractCategoryBean
  </query>
  <query name="ContractCategoryBean.one">
    from ContractCategoryBean as e where e.name=:name
  </query>
</hibernate-mapping>
