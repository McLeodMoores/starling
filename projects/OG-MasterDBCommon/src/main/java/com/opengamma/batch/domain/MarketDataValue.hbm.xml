<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.masterdb.batch">

  <class name="com.opengamma.batch.domain.MarketDataValue" table="rsk_live_data_snapshot_entry">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
        <param name="sequence_name">rsk_hibernate_sequence</param>
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>
    
    <property name="marketDataId" column="snapshot_id" not-null="true"/>    
    
    <property name="computationTargetSpecificationId" column="computation_target_id" not-null="true"/>
    
    <property name="name" not-null="true"/>
    
    <property name="value" not-null="true"/>
    
 
  </class>
  
</hibernate-mapping>
