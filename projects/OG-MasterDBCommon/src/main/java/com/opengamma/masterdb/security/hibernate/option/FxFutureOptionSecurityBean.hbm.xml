<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.masterdb.security.hibernate.option">
  <union-subclass name="FxFutureOptionSecurityBean"
                  extends="com.opengamma.masterdb.security.hibernate.SecurityBean" table="sec_fxfutureoption">
    <property name="optionExerciseType" column="option_exercise_type"
              type="com.opengamma.masterdb.security.hibernate.option.OptionExerciseTypeUserType" not-null="true"/>
    <property name="optionType" column="option_type"
              type="com.opengamma.masterdb.security.hibernate.option.OptionTypeUserType" not-null="true"/>
    <property name="strike" type="double" not-null="true"/>
    <component name="expiry" class="com.opengamma.masterdb.security.hibernate.ExpiryBean">
      <component name="expiry" class="com.opengamma.masterdb.security.hibernate.ZonedDateTimeBean">
        <property name="date" column="expiry_date" type="timestamp" not-null="true"/>
        <property name="zone" column="expiry_zone" type="string" not-null="true"/>
      </component>
      <property name="accuracy" column="expiry_accuracy"
                type="com.opengamma.masterdb.security.hibernate.ExpiryAccuracyUserType" not-null="true"/>
    </component>
    <component name="underlying" class="com.opengamma.masterdb.security.hibernate.ExternalIdBean">
      <property name="scheme" column="underlying_scheme" type="string"/>
      <property name="identifier" column="underlying_identifier" type="string"/>
    </component>
    <many-to-one name="currency" column="currency_id" class="com.opengamma.masterdb.security.hibernate.CurrencyBean"
                 not-null="true"/>
    <many-to-one name="tradingExchange" column="trading_exchange_id"
                 class="com.opengamma.masterdb.security.hibernate.ExchangeBean"/>
    <many-to-one name="settlementExchange" column="settlement_exchange_id"
                 class="com.opengamma.masterdb.security.hibernate.ExchangeBean"/>
    <property name="pointValue" type="double"/>
  </union-subclass>

  <query name="FxFutureOptionSecurityBean.one.bySecurityId"><![CDATA[
    from 
      FxFutureOptionSecurityBean as s
    where
      s.securityId = :securityId
  ]]></query>

  <query name="FxFutureOptionSecurityBean.all">
    from FxFutureOptionSecurityBean
  </query>

</hibernate-mapping>